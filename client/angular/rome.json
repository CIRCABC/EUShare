{
  "formatter": {
    "ignore": ["./src/app/openapi/api/*.ts", "./src/app/openapi/model/*.ts"],
    "indentStyle": "space"
  },
  "linter": {
    "ignore": ["./src/app/openapi/api/*.ts", "./src/app/openapi/model/*.ts"],

    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "noParameterAssign": "off"
      },
      "complexity": {
        "noUselessConstructor": "off"
      }
    }
  }
}
